generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  role          Role     @default(CUSTOMER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  banned     Boolean?
  banReason  String?
  banExpires DateTime?

  sessions Session[]
  accounts Account[]

  companyName    String?
  phoneNumber    String?
  whatsappNumber String?
  fullAddress    String?

  cart   Cart?
  orders Order[]
}

enum Role {
  ADMIN
  CUSTOMER
  MODERATOR
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([accessToken])
  @@index([refreshToken])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
}

model Cart {
  id     String     @id @default(cuid())
  userId String     @unique
  user   User       @relation(fields: [userId], references: [id])
  items  CartItem[]
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id])
  productId String
  name      String
  image     String?
  quantity  Int
  price     Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ServiceOrder {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [orderId], onDelete: Cascade)

  serviceType    String
  additionalData Json?
}

model Order {
  orderId String  @id // Primary key
  userId  String?
  user    User?   @relation(fields: [userId], references: [id])

  customerName   String
  emailAddress   String
  phoneNumber    String
  whatsappNumber String?
  companyName    String?
  fullAddress    String

  productsList  Json?
  status        OrderStatus @default(PENDING)
  totalAmount   Float       @default(0)
  shippingCost  Float       @default(0)
  discount      Float       @default(0)
  productCost   Float?
  transportCost Float?

  payments      Payment[]
  documents     OrderDocument[]
  serviceOrders ServiceOrder[]
  productOrders ProductOrder[]
  linkOrders    LinkOrder[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Product {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  brand       String
  productType ProductType @default(NEW)

  price              Float
  discountPercentage Float   @default(0)
  warranty           String?

  shortDescription String?
  longDescription  String?
  additionalData   Json?

  isAvailable Boolean @default(true)
  isHotDeal   Boolean @default(false)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  productOrders ProductOrder[]
  images        ProductImage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductOrder {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [orderId], onDelete: Cascade)

  productId String
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  productName  String
  productImage String
  warranty     String?
  productBrand String
  price        Float
  quantity     Int     @default(1)
}

model LinkOrder {
  id       String @id @default(cuid())
  orderId  String
  order    Order  @relation(fields: [orderId], references: [orderId], onDelete: Cascade)
  quantity Int    @default(1)
  link     String
}

model Payment {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [orderId], onDelete: Cascade)

  amount Float
  method PaymentMethod
  date   DateTime      @default(now())
  note   String?
}

model OrderDocument {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [orderId], onDelete: Cascade)

  type      DocumentType
  data      Json
  issuedBy  String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Category {
  id       String     @id @default(cuid())
  name     String
  slug     String     @unique
  level    Int
  parentId String?
  parent   Category?  @relation("CategoryParent", fields: [parentId], references: [id])
  children Category[] @relation("CategoryParent")

  fullPath String @unique

  products Product[]
}

model ProductImage {
  id         String  @id @default(cuid())
  imageId    String
  url        String
  isFeatured Boolean @default(false)

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

enum OrderStatus {
  PENDING
  CONFIRMED
  CANCELED
  PROCESSING
  SHIPPED
  DELIVERED
  RETURNED
}

enum DocumentType {
  QUOTATION
  INVOICE
  RECEIPT
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  CARD
  MOBILE_BANKING
  OTHER
}

enum ProductType {
  NEW
  RECONDITION
  USED
}

model BannerSlider {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  image     String
  link      String
  isActive  Boolean

  @@map("BannerSlider")
}

model SingleBanner {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  image     String
  link      String
  isActive  Boolean

  @@map("SingleBanner")
}

model CCTVPackage {
  id                 String      @id @default(cuid())
  title              String
  slug               String      @unique
  price              Float
  discountPercentage Float       @default(0)
  isAvailable        Boolean     @default(true)
  shortDescription   String
  longDescription    String
  images             CCTVImage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CCTVImage {
  id         String  @id @default(cuid())
  imageId    String
  url        String
  isFeatured Boolean @default(false)

  cctvId String
  cctv   CCTVPackage @relation(fields: [cctvId], references: [id], onDelete: Cascade)
}
